<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.myapplication.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/title_city_layout"
            android:background="@null"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="长沙"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textSize="25dp"
            android:gravity="center|center_vertical"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/title_update_layout"
            android:background="@null"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/city_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="长沙"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textSize="45sp"/>


    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="周二 2016/7/12"
        android:padding="5dp"
        android:textColor="#ffffff"
        android:textSize="26sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/weather_14"
            android:id="@+id/day_weather_pic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8~13C"
                android:textSize="15dp"
                android:padding="5dp"
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/weather_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小雨"
                android:textSize="15dp"
                android:padding="5dp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="风力 北风 4-5级"
                android:textSize="15dp"
                android:padding="5dp"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/weather_14"
            android:id="@+id/night_weather_pic" />
    </LinearLayout>

    <GridView
        android:id="@+id/weather_grid"
        android:layout_width="match_parent"
        android:layout_height="226dp">

    </GridView>

</LinearLayout>